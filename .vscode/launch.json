{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    //! read ./docs/development/codespace.md
    {
      "name": "Codespace Debug(Android)",
      "request": "launch",
      "type": "dart",
      //! 192.168.1.6:5555 -> use IP:port instead of Device ID
      "deviceId": "",
      "flutterMode": "debug",
      "args": [
        "--flavor",
        "development",
        "--target",
        "lib/main_development.dart"
      ]
    },
    {
      "name": "Debug on Chrome",
      "request": "launch",
      "type": "dart",
      "program": "lib/main_development.dart",
      "flutterMode": "debug",
      "args": [
        "--flavor",
        "development",
        "-d",
        "chrome",
        "--web-port=3000",
      ]
    },
    {
      "name": "Debug Mode",
      "request": "launch",
      "type": "dart",
      "program": "lib/main_development.dart",
      "flutterMode": "debug",
      "args": [
        "--flavor",
        "development",
      ]
    },
    {
      "name": "Profile Mode",
      "request": "launch",
      "type": "dart",
      "program": "lib/main_staging.dart",
      "flutterMode": "profile",
      "args": [
        "--flavor",
        "staging",
      ]
    },
    {
      "name": "Release Mode",
      "request": "launch",
      "type": "dart",
      "program": "lib/main_production.dart",
      "flutterMode": "release",
      "args": [
        "--flavor",
        "production",
      ]
    }
  ]
}